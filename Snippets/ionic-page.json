{
  // Installed through File > Preferences > Configure User Snippets. Create new file/Add to new file the code below
  "Ionic Page": {
    "description": "Creates Ionic Component with ViewWillEnter/ViewWillLeave lifecycle hooks, includes destroy$ observable",
    "scope": "javascript,typescript",
    "prefix": "a-ion-page",
    "body": [
      "import { Component, OnInit } from '@angular/core'",
      "import { IonicModule, ViewWillEnter, ViewWillLeave } from '@ionic/angular'",
      "import { Subject } from 'rxjs';",
      "@Component({",
      "selector: '',",
      "templateUrl: '',",
      "standalone: true,",
      "imports: [IonicModule]",
      "})",
      "export class NameComponent implements OnInit, ViewWillEnter, ViewWillLeave {",
      "destroy$!: Subject<any>;",
      "constructor() {}",
      "ngOnInit() {}",
      "ionViewWillEnter(): void {",
      "this.destroy$ = new Subject();",
      "}",
      "ionViewWillLeave(): void {",
      "this.destroy$.next(true);",
      "this.destroy$.complete();",
      "}",
      "}"
    ]
  }
}
